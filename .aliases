alias ll="ls -lah"
alias grep='grep --color=auto'
alias diff='diff --color=auto'

alias tx='tmux'

alias tf='terraform'
alias tg='terragrunt'

alias gitb="git branch --show-current"

alias ghpr='gh pr view -w'
alias ghr='gh repo view -w'

# Generates string for debian package changelog file
# https://www.debian.org/doc/debian-policy/ch-source.html#s-dpkgchangelog
alias debchl="echo ' -- $(git config user.name) <$(git config user.email)>  $(date -R)'"

alias dps="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.RunningFor}}\t{{.Ports}}\t{{.Image}}'"
alias dpsa="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.RunningFor}}\t{{.Ports}}\t{{.Image}}' -a"

if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
